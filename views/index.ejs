<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title></title>
    </head>
    <body>
        <nav>
            <a href="/products/new">Add a New Product</a>
        </nav>
        <h1>Products index page</h1>
        <ul>
            <% products.forEach(product => { %>
            	<li><a href="/products/<%=product._id; %>"> <%=product.description; %> 
            		<%=product.name; %>
            		<%=product.price; %>
				</a></li>
            <% }) %>
        </ul>
    </body>